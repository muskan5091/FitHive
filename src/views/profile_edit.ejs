  <!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/css/style.css">
    <title>FitHive Gym Wear</title>
</head>
<body>
<%- include('partials/header') %>

<div class="profile-container">
  <div class="profile-header">
    <h1>Edit Profile</h1>
  </div>

  <div class="profile-grid">
    <div class="profile-card profile-avatar-wrap">
      <div class="profile-avatar"><%= (user && user.fullname)? user.fullname.charAt(0).toUpperCase() : 'U' %></div>
      <a href="/profile" class="profile-btn outline">Back to Profile</a>
    </div>

    <div class="profile-card">
      <% if (query && query.error) { %>
        <p class="profile-message" style="color:#ff8b8b"><%= query.error %></p>
      <% } %>

  <form action="/profile/edit" method="POST" class="profile-form">
        <label for="fullname">Full name</label>
        <input id="fullname" name="fullname" type="text" value="<%= user.fullname %>" required />

        <label for="email">Email</label>
        <input id="email" name="email" type="email" value="<%= user.email %>" required />

        <div style="display:flex; gap:12px; margin-top:8px;">
          <button class="profile-btn" type="submit">Save changes</button>
          <a class="profile-btn outline" href="/profile">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
 <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>

</body>
</html>
