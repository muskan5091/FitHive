<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="/css/contact.css">
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <title>Contact Us - FitHive</title>

  <style>
    /* Inline styles just for alerts; keep rest in contact.css */
    .alert {
      padding: 12px 15px;
      margin: 10px 0;
      border-radius: 8px;
      font-weight: 500;
      text-align: center;
      transition: opacity 0.5s ease, transform 0.5s ease;
    }
    .alert-success {
      background-color: #d1fae5;
      color: #065f46;
      border: 1px solid #10b981;
    }
    .alert-error {
      background-color: #fee2e2;
      color: #991b1b;
      border: 1px solid #ef4444;
    }
  </style>
</head>

<body>
  <!-- Header -->
  <%- include('partials/header') %>

  <!-- ===== Contact Section ===== -->
  <section class="contact-wrapper">
    <div class="container contact-container">

      <!-- ===== Left: Info ===== -->
      <div class="contact-left">
        <h3>Get in Touch</h3>
        <p>
          Weâ€™re here to answer your queries, assist with your orders, or help you
          customize your gym wear.
        </p>

        <div class="info-box">
          <i class="fa-solid fa-phone"></i>
          <h4>Call Us</h4>
          <a href="tel:+919870967450">+91 98709 67450</a>
        </div>

        <div class="info-box">
          <i class="fa-solid fa-envelope"></i>
          <h4>Email Us</h4>
          <a href="mailto:support@fithive.com">support@fithive.com</a>
        </div>

        <div class="info-box">
          <i class="fa-solid fa-location-dot"></i>
          <h4>Visit Us</h4>
          <p>Koramangala, Bangalore</p>
        </div>
      </div>

      <!-- ===== Right: Form ===== -->
      <div class="contact-right">
        <h3>Send Us a Message</h3>

        <!-- âœ… Show error or success -->
        <% if (error) { %>
          <div class="alert alert-error"><%= error %></div>
        <% } %>

        <% if (success) { %>
          <div class="alert alert-success"><%= success %></div>
        <% } %>

        <form action="/contact" method="POST" novalidate>
          <div class="form-row">
            <input
              type="text"
              name="name"
              placeholder="Your Name"
              value="<%= typeof name !== 'undefined' ? name : '' %>"
              required
            />
            <input
              type="email"
              name="email"
              placeholder="Your Email"
              value="<%= typeof email !== 'undefined' ? email : '' %>"
              required
            />
          </div>

          <input
            type="text"
            name="subject"
            placeholder="Subject"
            value="<%= typeof subject !== 'undefined' ? subject : '' %>"
            required
          />

          <textarea
            name="message"
            rows="5"
            placeholder="Your Message"
            required
          ><%= typeof message !== 'undefined' ? message : '' %></textarea>

          <button type="submit" class="btn-send">Send Message</button>
        </form>
      </div>
    </div>
  </section>

  <!-- ===== Map Section ===== -->
  <section class="map-container">
    <h4>Our Location</h4>
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3890.1806062046094!2d77.61447871418907!3d12.93488321951117!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae14862d5d9fb1%3A0xa573b196247b6ca!2sKoramangala%2C%20Bengaluru%2C%20Karnataka%20560034!5e0!3m2!1sen!2sin!4v1699370405478!5m2!1sen!2sin"
      allowfullscreen=""
      loading="lazy"
    ></iframe>
  </section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const alerts = document.querySelectorAll(".alert");

    // ðŸ•‘ Fade-out animation for alerts
    alerts.forEach(alert => {
      setTimeout(() => {
        alert.style.opacity = "0";
        alert.style.transform = "translateY(-10px)";
        setTimeout(() => alert.remove(), 600);
      }, 2000);
    });

    // ðŸ§¹ Remove ?success=1 from URL after fade-out
    const url = new URL(window.location);
    if (url.searchParams.has("success")) {
      setTimeout(() => {
        url.searchParams.delete("success");
        window.history.replaceState({}, document.title, url.pathname);
      }, 2500); // clear the query after 2.5 s
    }
  });
</script>



  <script src="/js/script.js"></script>

  <!-- Footer -->
  <%- include('partials/footer') %>
</body>
</html>
