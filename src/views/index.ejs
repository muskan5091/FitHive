<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/product.css">
  <title>FitHive Gym Wear</title>
</head>
<body>

  <!-- Header -->
  <%- include('partials/header') %>

  <!-- Carousel -->
  <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
        aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>

    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/assests/images/2465431.jpg" class="d-block w-100" alt="Comfortable gym wear">
        <div class="carousel-caption d-none d-md-block">
          <h1>Build Up<br><span>Your Life</span></h1>
          <p>With comfortable wears</p>
          <a href="/shop"><button class="b-btn">Shop Now</button></a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="/assests/images/womens_t-shirt_and_tops_1900x.webp" class="d-block w-100" alt="Women's new arrival">
        <div class="carousel-caption d-none d-md-block">
          <h1>Women's New<br><span>Arrivals</span></h1>
          <p>New colors, now also available in women sizing</p>
          <a href="/shop"><button class="b-btn">Shop Now</button></a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="/assests/images/wp2483004.jpg" class="d-block w-100" alt="Men's new arrival">
        <div class="carousel-caption d-none d-md-block">
          <h1>Men's New<br><span>Arrivals</span></h1>
          <p>New colors, now also available in men's sizing</p>
          <a href="/shop"><button class="b-btn">Shop Now</button></a>
        </div>
      </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>

    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- On Sale Section -->
  <div class="section_container sale_container">
    <h2 class="section__title">On Sale</h2>
    <div class="sale__grid">
      <div class="sale__card">
        <img src="/assests/images/bd40baac0f9f1d50674aeaa02e34962c.jpg" height="450px" alt="Man T-shirt" />
        <div class="sale__content">
          <p class="sale__subtitle">MAN T-shirts</p>
          <h4 class="sale__title">Sale <span>40%</span> Off</h4>
          <p class="sale__subtitle">- DON'T MISS -</p>
          <a href="/man_outwears"><button class="btn sale__btn">SHOP NOW</button></a>
        </div>
      </div>

      <div class="sale__card">
        <img src="/assests/images/69a42c48e00ceadd4382e246f2354185.jpg" height="450px" alt="Woman Bottoms" />
        <div class="sale__content">
          <p class="sale__subtitle">WOMAN BOTTOMS</p>
          <h4 class="sale__title">Sale <span>25%</span> Off</h4>
          <p class="sale__subtitle">- DON'T MISS -</p>
          <a href="/woman_bottoms"><button class="btn sale__btn">SHOP NOW</button></a>
        </div>
      </div>

      <div class="sale__card">
        <img src="/assests/images/c1bf48e1ddd1b9b5ed677f6f6aa1899a.jpg" height="450px" alt="Shoes" />
        <div class="sale__content">
          <p class="sale__subtitle">SHOES</p>
          <h4 class="sale__title">Sale <span>20%</span> Off</h4>
          <p class="sale__subtitle">- DON'T MISS -</p>
          <a href="/accessories"><button class="btn sale__btn">SHOP NOW</button></a>
        </div>
      </div>
    </div>
  </div>

  <!-- Feature Icons Section -->
  <section class="feature-section">
    <div class="feature-box">
      <div class="feature-icon"><i class="fa-solid fa-truck-fast"></i></div>
      <h3>FREE SHIPPING</h3>
      <p>On orders above ₹899</p>
    </div>

    <div class="feature-box">
      <div class="feature-icon"><i class="fa-solid fa-heart"></i></div>
      <h3>CUSTOMIZATION</h3>
      <p>Personalize your gym wear</p>
    </div>

    <div class="feature-box">
      <div class="feature-icon"><i class="fa-solid fa-star"></i></div>
      <h3>PREMIUM QUALITY</h3>
      <p>Sustainable & durable materials</p>
    </div>
  </section>

  <!-- Video Section -->
  <div class="video-section">
    <video width="100%" height="auto" autoplay loop muted>
      <source src="/assests/video/3209241-uhd_2560_1440_25fps (1).mp4" type="video/mp4">
    </video>
  </div>

  <!-- Must Have Section -->
  <section class="section__container musthave__container">
    <h2 class="section__title text-center">Must Have</h2>
    <div class="musthave__grid">
      <% products.forEach(product => { %>
        <article class="musthave__card">
          <% if (product.customizable) { %>
            <div class="customize-badge" title="Customizable Product">
              <i class="fa fa-sliders-h"></i>
            </div>
          <% } %>

          <a href="<%= user ? '/product/' + (product._id || product.id) : '/login' %>" class="product-link">
            <img src="<%= product.image %>" alt="<%= product.name %>">
          </a>

          <div class="card-body">
            <h5><%= product.name %></h5>
            <p><%= product.desc %></p>
            <div class="product-price-rating">
              <span class="price">₹<%= product.price %></span>
              <span class="rating">
                <i class="fa fa-star"></i> <%= product.rating %>
              </span>
            </div>
          </div>
        </article>
      <% }) %>
    </div>
  </section>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/script.js"></script>
</body>
</html>
